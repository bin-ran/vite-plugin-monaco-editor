{
  "name": "@binran/vite-plugin-monaco-editor",
  "description": "A Vite plugin that simplifies the integration of Monaco Editor with automatic worker handling and language support",
  "version": "0.1.1",
  "type": "module",
  "author": "bin-ran",
  "homepage": "https://github.com/bin-ran/vite-plugin-monaco-editor",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bin-ran/vite-plugin-monaco-editor.git"
  },
  "keywords": [
    "vite",
    "plugin",
    "monaco-editor",
    "editor",
    "code-editor",
    "typescript",
    "javascript",
    "web-worker"
  ],
  "license": "MIT",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "README_zh-CN.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "example:dev": "pnpm build && vite --config example/vite.config.ts",
    "example:build": "pnpm build && vite build --config example/vite.config.ts",
    "example:preview": "vite preview --config example/vite.config.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/node": "^25.3.2",
    "@vitejs/plugin-vue": "^6.0.4",
    "bumpp": "^10.4.1",
    "eslint": "^10.0.2",
    "publint": "^0.3.17",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vue": "^3.5.29",
    "vue-router": "^5.0.3"
  },
  "peerDependencies": {
    "monaco-editor": "^0.55.1",
    "vite": "^7.3.1"
  }
}
